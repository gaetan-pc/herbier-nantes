<div class="app-bar">
  <%= image_tag "parcs_logo_webrond.png", height: '60', width: '60'%>
</div>
<div class="darkleather-header">
	<div class="app-title">
		<h1>
           Herbier historique de la Ville de Nantes
        </h1>
        <div class="row">
        	<div class="medium-8 medium-centered column">
        		<%= form_tag(specimens_path, method: 'get') do %>
        			<div class="input-group" style="padding: 0 50px 0 50px;">
        				<%= text_field_tag(:q, params[:q], class: 'input-group-field', placeholder: "Rechercher par nom latin, localité, année de collecte...") %>
        				<div class="input-group-button">
        		  			<%= submit_tag 'Recherche', :class=>"button", name: nil %>
        		  		</div>
        			</div>
        		<% end %>
        	</div>
        </div>
		
	</div>
</div>

<div style="padding-top: 20px;">
	<div class="row">
		<% @specimens.each do |specimen| %>
			<%= react_component('SpecimenCard', 
				taxon: specimen.taxon, 
				linkTo: specimen_path(specimen.id),
				description: specimen.description, 
				imgUrl: specimen.sheet.cover.url) =%>
		<% end %>
	</div>
</div>





