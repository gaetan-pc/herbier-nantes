<div class="darkleather-bg">
	<h1>Recherche specimen</h1>
 
	<%= form_tag(specimens_path, method: 'get') do %>
		<div class="input-group">
			<%= text_field_tag(:q, params[:q], class: 'input-group-field') %>
			<div class="input-group-button">
	  			<%= submit_tag('Recherche', :class=>"button") %>
	  		</div>
		</div>

	<% end %>

	 
	<h1>RÃ©sultats</h1>
	<ul>
	  <% @specimens.each do |specimen| %>
	    <li>
	      <%= link_to specimen.taxon, specimen_path(specimen.id) %>
	    </li>
	  <% end %>
	</ul>
</div>

