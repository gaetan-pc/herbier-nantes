
<div class="darkleather-bg" style="position: fixed;">
	<div class="app-bar">
	  <%= image_tag "parcs_logo_webrond.png", height: '80', width: '80'%>
	</div>
	<div class="app-title" style="z-index: 300; overflow: hidden;">
		<h1>
           Herbier historique de la Ville de Nantes
        </h1>
        <div class="row">
        	<div class="medium-8 medium-centered column">
        		<%= form_tag(specimens_path, method: 'get') do %>
        			<div class="input-group" style="padding: 0 50px 0 50px;">
        				<%= text_field_tag(:q, params[:q], class: 'input-group-field') %>
        				<div class="input-group-button">
        		  			<%= submit_tag 'Recherche', :class=>"button", name: nil %>
        		  		</div>
        			</div>
        		<% end %>
        	</div>
        </div>
		
	</div>
</div>
	
<div style="padding: 400px 50px 0 50px; height: 100%;">
	<span>Aucun r√©sultat</span>
	<div class="row">
		<% @specimens.each do |specimen| %>
		<div class="medium-4 columns">
			<div class="card transition">
			  <h2 class="transition"><%= specimen.taxon %></h2>
			  <p>Aenean lacinia bibendum nulla sed consectetur. Donec ullamcorper nulla non metus auctor fringilla.</p>
			  <div class="cta-container transition"><%= link_to "Voir la planche", specimen_path(specimen.id), { :class=>"cta" } %></div>
			  <div class="card_circle transition"><%= image_tag "parcs_logo_webrond.png", height: '80', width: '80'%></div>
			</div>
		</div>
		<% end %>
	</div>

</div>


